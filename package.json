{
  "name": "gplint",
  "version": "1.3.0",
  "description": "A Gherkin linter/validator written in javascript.",
  "author": "Luis Zurro",
  "homepage": "https://github.com/Nyaran/gplint#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nyaran/gplint"
  },
  "bugs": {
    "url": "https://github.com/Nyaran/gplint/issues"
  },
  "funding": [
    {
      "type": "ko-fi",
      "url": "https://ko-fi.com/nyaran"
    }
  ],
  "license": "ISC",
  "keywords": [
    "gherkin",
    "pickle",
    "cucumber",
    "cucumberjs",
    "linter",
    "lint"
  ],
  "main": "build/index.js",
  "bin": {
    "gplint": "bin/gplint.js"
  },
  "scripts": {
    "build": "babel src -d build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "demo": "node ./build/index.js -c ./test-data-wip/.gplintrc test-data-wip/**",
    "lint": "eslint --max-warnings 0 ./src ./test",
    "mocha": "cross-env NODE_ENV=test mocha --recursive",
    "prepare": "npm run build",
    "test": "run-s -c -n lint test:unit",
    "test:unit": "nyc npm run mocha"
  },
  "dependencies": {
    "@cucumber/gherkin": "23.0.1",
    "@cucumber/gherkin-streams": "5.0.1",
    "chalk": "4.1.2",
    "commander": "9.2.0",
    "core-js": "3.22.4",
    "glob": "8.0.2",
    "lodash": "4.17.21",
    "strip-ansi": "6.0.1",
    "strip-json-comments": "3.0.1",
    "text-table": "0.2.0",
    "xml-js": "1.6.11"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.17.10",
    "@babel/plugin-transform-runtime": "7.17.10",
    "@babel/preset-env": "7.17.10",
    "@babel/register": "7.17.7",
    "@istanbuljs/nyc-config-babel": "3.0.0",
    "babel-plugin-istanbul": "6.1.1",
    "chai": "4.3.6",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "eslint": "8.15.0",
    "mocha": "10.0.0",
    "mock-fs": "5.1.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "sinon": "14.0.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "directories": {
    "lib": "./src",
    "test": "./test"
  },
  "files": [
    "/build",
    "/CHANGELOG.md"
  ]
}
